<% layout("layouts/boilerplate.ejs") %>
<style>
  .filters{
    display: flex;
    flex-wrap: wrap;
  }
  .filter{
    text-align: center;
    margin-right: 2rem;
    margin-top: 2rem;
    opacity: 0.7;
    cursor: pointer;
  }
  .filter:hover{
    opacity: 1;
  }
  .filter p{
    font-size: 0.8rem;
  }
</style>
<body>
    
    <!-- <form method="get" action="/listings/new">
        <button>Create new listing</button>
    </form> -->
    <div class="filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire" style="color: #ffae00;"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed" style="color: #ff000d;"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-sun" style="color: #440811;"></i></div>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome" style="color: #FFD43B;"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming" style="color: #03ecfc;"></i></div>
        <p>Pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground" style="color: #2f05ff;"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tractor" style="color: #3a3412;"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-torii-gate" style="color: #ff9500;"></i></div>
        <p>Iconic cities</p>
      </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
      <% allListings.map((listing)=>{ %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card listing-card">
            <img style="height: 20rem;" src="<%=listing.image.url%>" class="card-img-top" alt="listing_image ">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text"> 
                <b> <%= listing.title %><br/> </b>
                <% if (listing.price !== null) { %>
                  &#8377;<%= listing.price%>/night
                <% } else { %>
                  &#8377;N/A/night
                <% } %>
              </p>
            </div>
        </div>
        </a>
      <% }) %>  
    </div>
</body>
